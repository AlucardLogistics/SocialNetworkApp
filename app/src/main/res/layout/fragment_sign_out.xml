<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/black"
            android:id="@+id/signOutEmote"
            android:src="@drawable/signoutemote"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_below="@id/signOutEmote"
            android:id="@+id/tvConfirmSignOut"
            android:text="Are you sure you want to sign out?"/>

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:id="@+id/btnConfirmSignOut"
            android:layout_marginTop="20dp"
            android:layout_below="@id/tvConfirmSignOut"
            android:background="@drawable/white_rounded_button"/>

    </RelativeLayout>

    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar"
        android:layout_marginTop="370dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Signing Out..."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_below="@id/progressBar"
        android:layout_centerHorizontal="true"
        android:id="@+id/tvSigningOut"/>

</RelativeLayout>