<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.logistics.alucard.socialnetwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Home.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Log.LogActivity" />
        <activity android:name=".Profile.ProfileActivity" />
        <activity
            android:name=".Search.SearchActivity"
            android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".Share.ShareActivity" />
        <activity android:name=".Profile.AccountSettingsActivity" />
        <activity android:name=".Login.LoginActivity" />
        <activity android:name=".Login.RegisterActivity" />
        <activity android:name=".Share.NextActivity" />
        <activity android:name=".Chat.ChatActivity"
            android:parentActivityName=".Home.HomeActivity"/>
        <activity android:name=".Utils.FullScreenImage"/>
    </application>

</manifest>